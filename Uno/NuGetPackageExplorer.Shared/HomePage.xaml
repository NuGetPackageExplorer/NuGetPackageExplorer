<Page x:Class="PackageExplorer.HomePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:NupkgExplorer.Views.Content"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid>
		<StackPanel Orientation="Vertical"
					Spacing="12"
					HorizontalAlignment="Center"
					VerticalAlignment="Center">
			<Button Content="Open local package"
					Command="{Binding OpenLocalPackageCommand}"
					HorizontalAlignment="Stretch" />
			<Button Content="Open package from feed"
					Command="{Binding OpenRemotePackageCommand}"
					HorizontalAlignment="Stretch" />
			<Rectangle Height="1"
					   Fill="LightGray" />
			<Button Content="Open a test package"
					Command="{Binding OpenTestPackageCommand}"
					HorizontalAlignment="Stretch" />
		</StackPanel>
	</Grid>
</Page>